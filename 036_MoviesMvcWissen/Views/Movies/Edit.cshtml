@model Movie

@{
    ViewBag.Title = "Edit";
    var years = ViewBag.years as SelectList;
}

<h2>Edit</h2>
@{
    if (TempData["Info"] != null)
    {
        <div class="alert alert-dismissible alert-primary">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>INFO :</strong> @TempData["Info"].ToString()
        </div>
    }
}

@using (Html.BeginForm("Edit", "Movies", FormMethod.Post))
{
    @Html.Hidden("Id", Model.Id)
    <div class="form-group">
        @Html.Label("tbName", "Name :")
        @Html.TextBox("Name", Model.Name, new { @class = "form-control", placeholder = "Enter movie name", id = "tbName" })
    </div>
    <div class="form-group">
        @Html.Label("ddlProductionYear", "Production Year :")
        @Html.DropDownList("ProductionYear", years, new { @class = "form-control", id = "ddlProductionYear" })
    </div>
    <div class="form-group">
        @Html.Label("tbBoxOfficeReturn", "Box Office Return :")
        @Html.TextBox("BoxOfficeReturn", Model.BoxOfficeReturn, new { @class = "form-control", placeholder = "Box Office Return value", id = "tbBoxOfficeReturn" })
    </div>
    <div class="form-group">
        <button type="reset" class="btn btn-danger">Clear Form</button> &nbsp;&nbsp;&nbsp;&nbsp;
        <button type="submit" class="btn btn-success">Save Changes</button>
    </div>
}